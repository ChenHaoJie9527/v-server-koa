{
  "dependencies": {
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "koa": "^2.13.4",
    "koa-cors": "^0.0.16",
    "koa-router": "^12.0.0",
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@types/koa": "^2.13.5",
    "@types/koa-router": "^7.4.4",
    "@types/node": "^18.11.8",
    "koa-compose": "^4.1.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsnd --respawn src/main.ts",
    "build": "run-s clearBuild compile copyPublic",
    "clearBuild": "rimraf dist/*",
    "compile": "tsc",
    "copyPublic": "copyfiles -u 1 src/public/* dist",
    "serve": "cross-env NODE_ENV=production node dist/main.js",
    "start": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop ecosystem.config.js",
    "restart": "pm2 restart ecosystem.config.js",
    "delete": "pm2 delete ecosystem.config.js",
    "watch": "nodemon --exec src/main.ts"
  },
  "_moduleAliases": {
    "@": "./src",
    "@app": "./src/app"
  }
}
